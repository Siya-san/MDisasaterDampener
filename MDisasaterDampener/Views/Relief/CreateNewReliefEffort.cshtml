@model MDisasaterDampener.Models.ReliefEffortViewModel

@{
    ViewData["Title"] = "Create New Relief Effort";
}

<h1>Create New Relief Effort</h1>


<hr />
<div class="relief_form_container">
    <div class="relief_form">
        <form asp-action="ProcessCreateNewReliefEffort">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="relief_lable"></label>
                <input asp-for="Title" class="relief_input" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="relief_lable"></label>
                <textarea asp-for="Description" class="relief_input" ></textarea>
              
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="relief_create_btn" />
            </div>
        </form>
    </div>
</div>



