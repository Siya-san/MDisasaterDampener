@model MDisasaterDampener.Models.LoginViewModel


@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"] - Disasater Dampener Login</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MDisasaterDampener.styles.css" asp-append-version="true" />
</head>
<body>

<div class="login_body">

<div class="login_container">
    <div class="left">
        <h3>MDD Login</h3>
        <form asp-action="ProcessLogin">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="username" class="login_lable"></label>
                <input asp-for="username" class="login_input" />
                <span asp-validation-for="username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="password" class="login_lable"></label>
                <input asp-for="password" class="login_input" type="password"/>
                <span asp-validation-for="password" class="text-danger"></span>
            </div>
               <div class="form-group">
               
                   Don't have an account?' <a asp-area="" asp-controller="User" asp-action="Register" >Register</a>

             
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="login_button" />
            </div>
        </form>
    </div>
            <div class="right_image">
        
    </div>
</div>
</div>



</body>
</html>